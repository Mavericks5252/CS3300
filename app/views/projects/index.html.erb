<div class="container-fluid-nav text-center">
  
  <p style="color: green; font-size: 20px" id="notice"><%= notice %></p>

  <div class="title">
      <h1 style="font-family: 'Courier New', monospace;">Projects</h1>
    </div>
</div>



<div class="container">
  <table class="table">
    <thead>
      <tr>
        
        <% @projects.each do |project| %>
          
          <div class="card" >
            <div class="card-body" >
              <h5 class="card-title d-flex justify-content-center"> <%= project.title %> </h5>
              <p class="card-text d-flex justify-content-center"> <%= project.description %> </p>    
          </div>
          
          <div class="d-flex justify-content-center" >
              <%= link_to 'Show', project , :class => 'btn btn-outline-primary'%>
              <div class="ml-3 mr-3"><%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-outline-warning' %></div>
              <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger' %>
              
          </div>
        <% end %>
      </tr>
    </thead>
  </table>
</div>

<br>

<div class="container-fluid-nav text-center">
  <button type="button" class="btn btn-outline-primary btn-lg" > <%= link_to 'New Project', new_project_path %> </button>
</div>  
