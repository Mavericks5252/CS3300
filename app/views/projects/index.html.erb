<div class="container-fluid-nav text-center">
  <p id="notice"><%= notice %></p>

  <div class="title">
      <h1>Projects</h1>
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Desctiption</th>
      <th scope="col"> </th>
      <th scope="col"> </th>
      <th scope="col"> </th>


      <% @projects.each do |project| %>
        <tr>
          <div class="container-fluid-nav text-center">
            <td><%= project.title %></td>
            <td><%= project.description %></td>
            <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Show', project %></button></td>
            <td><button type="button" class="btn btn-outline-warning"><%= link_to 'Edit', edit_project_path(project) %></button></td>
            <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
          </div>
        </tr>
      <% end %>
    </tr>
  </thead>
</table>

<br>

